<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quizback"
    android:orientation="vertical"
    android:padding="30dp"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context="com.adgvit.appathon2k18.appathon2k18.Quiz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/quizhead" />
        <TextView
            android:layout_marginTop="10sp"
            android:padding="5sp"
            android:id="@+id/tv_q"
            android:layout_width="wrap_content"
            android:layout_height="150sp"
            android:layout_gravity="center_horizontal"
            android:text="QUESTION"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.6">
        <TextView
            android:id="@+id/timer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="02:65"
            android:layout_weight="0.1"
            android:textColor="#FFFFFF"
            android:textSize="38sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="20sp"/>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:paddingBottom="7sp">

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_weight="0.25"
                android:background="@drawable/button_quiz1"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_marginBottom="5sp"
                android:theme="@style/Widget.AppCompat.Button.Borderless">
            </Button>
            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:layout_height="30sp"
                android:layout_weight="0.25"
                android:background="@drawable/button_quiz2"
                android:textSize="14sp"
                android:layout_marginBottom="5sp"
                android:theme="@style/Widget.AppCompat.Button.Borderless" />
            <Button
                android:id="@+id/button4"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_weight="0.25"
                android:layout_marginBottom="5sp"
                android:textSize="14sp"
                android:background="@drawable/button_quiz3"
                android:theme="@style/Widget.AppCompat.Button.Borderless" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:layout_height="30sp"
                android:layout_weight="0.25"
                android:textSize="14sp"
                android:background="@drawable/button_quiz4"
                android:theme="@style/Widget.AppCompat.Button.Borderless" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:background="@null"
            android:src="@drawable/next"
            android:onClick="nextClick"/>

    </LinearLayout>

</LinearLayout>